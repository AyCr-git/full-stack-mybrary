<h2 class="page-title">Edit Author</h2>
<form action="/authors/<%= author.id %>?_method=PUT" method="POST">
    <div class="form-row">
        <div class="form-item">
            <%- include('_form_fields') %>
        </div>
    </div>

    <div class="form-row form-row-end btn-row">
        <a class="btn btn-primary" href="/authors/<%= author.id %>">Cancel</a>
        <button class="btn btn-danger" type="submit" >Update</button>
    </div>
</form>